{{#if updateQuestionForm}}
  <h3>Update Question</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="note">Note</label>
        {{input value=note id="note"}}
      </div>

      <button {{action 'update' question}}>Revise Question</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
